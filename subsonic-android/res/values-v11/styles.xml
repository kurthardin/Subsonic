<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Dashboard.Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    
    <style name="Dashboard.SpinnerDropDownItem" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Dashboard.TextAppearance</item>
    </style>
    
    <style name="Dashboard.SpinnerItem" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Dashboard.TextAppearance</item>
    </style>
    
    <style name="Theme.Wheat" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/wheatBackground</item>
        <item name="android:textColorPrimary">@color/wheatForeground1</item>
        <item name="android:textColorSecondary">@color/wheatForeground2</item>
        <item name="android:listViewStyle">@style/Widget.Wheat.ListView</item>
    </style>

    <style name="Widget.Wheat.ListView" parent="android:style/Widget.Holo.ListView">
        <item name="android:cacheColorHint">@color/wheatBackground</item>
    </style>
    
    <style name="Theme.Light" parent="android:Theme.Holo.Light" />
    
    <style name="Theme.Dark" parent="android:Theme.Holo" />

</resources>
