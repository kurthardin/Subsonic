<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dashboard_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/dashboard_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dashboard_select_server"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  >

                <TextView
                    android:id="@+id/dashboard_server_title"
                    style="@style/Dashboard.ListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard.select_server" />
                
                <Spinner
                    android:id="@+id/dashboard_server_spinner"
                    style="@style/Dashboard.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
                
            </LinearLayout>
            
            
            
            <TextView style="@style/Dashboard.ListSeparator" />

            <TextView
                android:id="@+id/dashboard_now_playing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.now_playing"
                style="@style/Dashboard.ListItem" />
            	
            
            
            
            <TextView style="@style/Dashboard.ListSeparator" />

            <TextView
                android:id="@+id/dashboard_artists"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.artists"
                style="@style/Dashboard.ListItem" />
            
            
            
            
            <TextView style="@style/Dashboard.ListSeparator" />

            <TextView
                android:id="@+id/dashboard_albums_newest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.albums_newest"
                style="@style/Dashboard.ListItem" />

            <TextView
                android:id="@+id/dashboard_albums_recent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.albums_recent"
                style="@style/Dashboard.ListItem" />

            <TextView
                android:id="@+id/dashboard_albums_frequent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.albums_frequent"
                style="@style/Dashboard.ListItem" />

            <TextView
                android:id="@+id/dashboard_albums_highest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.albums_highest"
                style="@style/Dashboard.ListItem" />

            <TextView
                android:id="@+id/dashboard_albums_random"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.albums_random"
                style="@style/Dashboard.ListItem" />
            
            
            
            
            <TextView style="@style/Dashboard.ListSeparator" />

            <TextView
                android:id="@+id/dashboard_playlists"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.playlists"
                style="@style/Dashboard.ListItem" />
            
            
            
            
            <TextView style="@style/Dashboard.ListSeparator" />

            <TextView
                android:id="@+id/dashboard_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.settings"
                style="@style/Dashboard.ListItem" />

            <TextView
                android:id="@+id/dashboard_help"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/dashboard.help"
                style="@style/Dashboard.ListItem" />
        </LinearLayout>

    </ScrollView>