<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    
    <!-- ActionBarCompat base styles -->	
	
    <style name="ActionBarCompatItemBase">
        <!-- layout_width/height must be set in code -->
        <item name="android:scaleType">center</item>
    </style>    

    <style name="ActionBarCompatTitleBase">
        <item name="android:id">@id/actionbar_compat_title</item>
        <!-- layout_width/height/weight must be set in code -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    
    
    <!-- ActionBarCompat light theme styles -->
    
    <style name="ActionBarCompat_Light">
        <item name="android:background">@color/actionbar_background_light</item>
    </style>

    <style name="ActionBarCompatProgressIndicator_Light" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ActionBarCompatTitle_Light" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/actionbar_title_light</item>
    </style>

    <style name="ActionBarCompatItemBase_Light" parent="style/ActionBarCompatItemBase">
        <item name="android:background">@drawable/actionbar_compat_item_light</item>
    </style>

    <style name="ActionBarCompatItem_Light" parent="style/ActionBarCompatItemBase_Light">
    </style>

    <style name="ActionBarCompatHomeItem_Light" parent="style/ActionBarCompatItemBase_Light">
    </style>
    
    
    <!-- ActionBarCompat dark theme styles -->
    
    <style name="ActionBarCompat_Dark">
        <item name="android:background">@color/actionbar_background_dark</item>
    </style>

    <style name="ActionBarCompatProgressIndicator_Dark" parent="android:style/Widget.ProgressBar.Large.Inverse">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ActionBarCompatTitle_Dark" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="ActionBarCompatItemBase_Dark" parent="style/ActionBarCompatItemBase">
        <item name="android:background">@drawable/actionbar_compat_item_dark</item>
    </style>

    <style name="ActionBarCompatItem_Dark" parent="style/ActionBarCompatItemBase_Dark">
    </style>

    <style name="ActionBarCompatHomeItem_Dark" parent="style/ActionBarCompatItemBase_Dark">
    </style>
    
    
    <!-- Dashboard styles -->
    
    <style name="Dashboard.TextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/dashboard_text</item>
    </style>
    
    <style name="Dashboard.Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    
    <style name="Dashboard.SpinnerDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Dashboard.TextAppearance</item>
    </style>
    
    <style name="Dashboard.SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Dashboard.TextAppearance</item>
    </style>
    
    <style name="Dashboard.ListSeparator" parent="@android:attr/listSeparatorTextViewStyle">
        <item name="android:background">@color/dashboard_separator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>
    
    <style name="Dashboard.ListItem" parent="@style/Dashboard.TextAppearance">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    
    
    <!-- Themes -->
    
    <style name="Theme.Wheat" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/wheatBackground</item>
        <item name="android:textColorPrimary">@color/wheatForeground1</item>
        <item name="android:textColorSecondary">@color/wheatForeground2</item>
        <item name="android:listViewStyle">@style/Widget.Wheat.ListView</item>
    </style>

    <style name="Widget.Wheat.ListView" parent="android:style/Widget.ListView.White">
        <item name="android:cacheColorHint">@color/wheatBackground</item>
    </style>
